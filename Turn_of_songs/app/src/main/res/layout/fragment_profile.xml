<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.Profile.ProfileFragment"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_fragment_title"
        android:paddingTop="180dp"
        android:text="@string/profil_menu_profil_title"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/alegreya_sc_bold"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="691dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoView"
            android:layout_width="190dp"
            android:layout_height="140dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/profil_icon" />

        <TextView
            android:id="@+id/username_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/alegreya_sc_bold"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/text_profil_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="98dp"
                android:fontFamily="@font/alegreya_sc"
                android:text="Playlists: "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_profil_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="120dp"
                android:layout_marginRight="120dp"
                android:fontFamily="@font/alegreya_sc"
                android:text="Share: "
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>